generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

// ============================================
// NOTES
// ============================================
// This boilerplate uses Supabase Auth directly.
// User authentication and session management are handled by Supabase's auth schema.
// No custom User or Session tables are needed.
// 
// Business logic models reference Supabase auth users via their UUID.

// ============================================
// USER PROFILE
// ============================================

/// Extended user profile information
/// References auth.users(id) from Supabase Auth
model Profile {
  id     String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId String @unique @map("user_id") @db.Uuid // References auth.users(id) in Supabase

  // Profile fields
  bio       String? @db.Text
  phone     String?
  avatarUrl String? @map("avatar_url")

  // User preferences stored as JSON
  preferences Json? @db.JsonB

  // Metadata
  createdAt DateTime @default(dbgenerated("now()")) @map("created_at")
  updatedAt DateTime @default(dbgenerated("now()")) @map("updated_at")

  @@map("profiles")
}
